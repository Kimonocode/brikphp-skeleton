{
    "name": "kimonocode/brikphp-skeleton",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "dev":"php -S localhost:8000 -t public"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "App\\Tests\\" : "tests/"
        }
    },
    "require": {
        "kimonocode/brikphp": "dev-main",
        "kimonocode/brikphp-console": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
